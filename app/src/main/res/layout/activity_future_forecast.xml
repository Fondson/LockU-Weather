<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/futureView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="hackuweather.lockuweather.FutureForecast">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:radius="3dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/weatherIconDay1"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:layout_margin="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/weatherNameDay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black_overlay"
                    android:textSize="35sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp" />

                <TextView
                    android:id="@+id/weatherTextDay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black_overlay"
                    android:textSize="35sp" />

            </LinearLayout>

            <View
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1">
            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:weightSum="3">

            <ImageView
                android:id="@+id/weatherIconDay2"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:layout_margin="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/weatherNameDay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black_overlay"
                    android:textSize="35sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp" />

                <TextView
                    android:id="@+id/weatherTextDay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black_overlay"
                    android:textSize="35sp" />

            </LinearLayout>

            <View
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1">
            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:weightSum="3">

            <ImageView
                android:id="@+id/weatherIconDay3"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:layout_margin="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/weatherNameDay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black_overlay"
                    android:textSize="35sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp" />

                <TextView
                    android:id="@+id/weatherTextDay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black_overlay"
                    android:textSize="35sp" />

            </LinearLayout>

            <View
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1">
            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/weatherIconDay4"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:layout_margin="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/weatherNameDay4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black_overlay"
                    android:textSize="35sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp" />

                <TextView
                    android:id="@+id/weatherTextDay4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black_overlay"
                    android:textSize="35sp" />

            </LinearLayout>

            <View
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1">
            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/weatherIconDay5"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:layout_margin="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/weatherNameDay5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black_overlay"
                    android:textSize="35sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp" />

                <TextView
                    android:id="@+id/weatherTextDay5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black_overlay"
                    android:textSize="35sp" />

            </LinearLayout>

            <View
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1">
            </View>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
